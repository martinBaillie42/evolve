<%- model_class = Experiment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:property_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:date_from) %></th>
      <th><%= model_class.human_attribute_name(:date_to) %></th>
      <th><%= model_class.human_attribute_name(:live) %></th>
      <th><%= model_class.human_attribute_name(:page_url) %></th>
      <th><%= model_class.human_attribute_name(:unique_identifier) %></th>
      <th><%= model_class.human_attribute_name(:js_code) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @experiments.each do |experiment| %>
      <tr>
        <td><%= experiment.id %></td>
          <td><%= experiment.property_id %></td>
          <td><%= experiment.name %></td>
          <td><%= experiment.date_from %></td>
          <td><%= experiment.date_to %></td>
          <td><%= experiment.live %></td>
          <td><%= experiment.page_url %></td>
          <td><%= experiment.unique_identifier %></td>
          <td><%= experiment.js_code %></td>
        <td><%=l experiment.created_at, format: :long %></td>
        <td>
          <%= link_to experiment_path(experiment), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_experiment_path(experiment), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to experiment_path(experiment), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_experiment_path,
            :class => 'btn btn-primary' %>
