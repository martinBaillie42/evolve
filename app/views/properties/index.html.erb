<%- model_class = Property -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tracking_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:website_url) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.id %></td>
          <td>
            <%= link_to property_path(property), :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                <%= property.tracking_id %>
            <%- end -%>
          </td>
          <td><%= property.name %></td>
          <td><%= property.website_url %></td>
        <td><%=l property.created_at, format: :long %></td>
      </tr>
    <% end %>
  </tbody>
</table>
