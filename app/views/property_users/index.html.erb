<p id="notice"><%= notice %></p>

<h1>Listing Property Users</h1>

<table>
  <thead>
    <tr>
      <th>Property</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @property_users.each do |property_user| %>
      <tr>
        <td><%= property_user.property_id %></td>
        <td><%= property_user.user_id %></td>
        <td><%= link_to 'Show', property_user %></td>
        <td><%= link_to 'Edit', edit_property_user_path(property_user) %></td>
        <td><%= link_to 'Destroy', property_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

